<Window x:Class="RSSViewer.Windows.EditRuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSViewer.Windows"
        mc:Ignorable="d"
        Title="Edit Rule"
        MinHeight="400"
        MinWidth="360"
        Height="400"
        Width="360"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth"
                        Value="62" />
            </Style>
            <Style TargetType="TextBlock"
                   x:Key="HeaderStyle">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="Margin"
                        Value="4,4,0,6" />
            </Style>
            <Style TargetType="StackPanel"
                   x:Key="HeaderContentPair">
                <Setter Property="Margin"
                        Value="0,0,0,8" />
            </Style>
        </Grid.Resources>

        <Grid>
            <TabControl SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="General">
                    <Grid>                        
                        <StackPanel Margin="8,0">

                            <StackPanel x:Name="General_Action">

                                <StackPanel Style="{StaticResource HeaderContentPair}">
                                    <TextBlock Text="Action"
                                               Style="{StaticResource HeaderStyle}" />

                                    <ComboBox x:Name="ActionsList"
                                              DisplayMemberPath="HandlerName">
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource HeaderContentPair}"
                                            DataContext="{Binding OnSourcesViewModel}">
                                    <TextBlock Text="On Source"
                                               Style="{StaticResource HeaderStyle}" />

                                    <ComboBox SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                              ItemsSource="{Binding Items}"
                                              DisplayMemberPath="Name">
                                    </ComboBox>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel x:Name="General_AddTag">

                                <StackPanel Style="{StaticResource HeaderContentPair}"
                                            DataContext="{Binding TagsViewModel}">
                                    <TextBlock Text="Tag Name"
                                               Style="{StaticResource HeaderStyle}" />

                                    <ComboBox SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                              Text="{Binding TagName, Mode=TwoWay}"
                                              ItemsSource="{Binding Items}"
                                              DisplayMemberPath="Name"
                                              IsEditable="True">
                                    </ComboBox>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Style="{StaticResource HeaderContentPair}" >
                                <TextBlock Text="Display Name"
                                           Style="{StaticResource HeaderStyle}" />

                                <TextBox Text="{Binding DisplayName, Mode=TwoWay}" />
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Parent"
                         x:Name="ParentPanel">
                    <Grid Margin="8,0">
                        <ListBox ItemsSource="{Binding ParentSelectorView.Items}"
                                 SelectedItem="{Binding ParentSelectorView.SelectedItem}"
                                 DisplayMemberPath="DisplayValue"
                                 x:Name="ParentList">
                        </ListBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Match">
                    <Grid>
                        <StackPanel Margin="8,0">
                            <StackPanel.Resources>

                                <Style TargetType="RadioButton">
                                    <Setter Property="Margin"
                                            Value="0,3" />
                                </Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Margin"
                                            Value="0,3" />
                                </Style>
                            </StackPanel.Resources>

                            <TextBlock Text="Mode"
                                       Style="{StaticResource HeaderStyle}" />

                            <ComboBox Width="140"
                                      HorizontalAlignment="Left"
                                      x:Name="MatchRuleModeComboBox"
                                      SelectionChanged="MatchRuleModeComboBox_SelectionChanged" 
                                      Margin="0,0,0,12" />

                            <StackPanel x:Name="Match_String">
                                <TextBlock Text="Value"
                                           Style="{StaticResource HeaderStyle}" />

                                <TextBox Height="19"
                                         x:Name="MatchValueTextBox" />

                                <CheckBox Content="IgnoreCase"
                                          IsChecked="{Binding IgnoreCase}"
                                          Margin="4" />
                            </StackPanel>

                            <Grid x:Name="Match_Tags">
                                <ListBox ItemsSource="{Binding MatchTagsViewModel.Items}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <CheckBox Content="{Binding}"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>

                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Lifetime"
                         x:Name="LifetimePanel">
                    <Grid>
                        <StackPanel>
                            <StackPanel Style="{StaticResource HeaderContentPair}">
                                <TextBlock Text="Total Matched Count"
                                           Style="{StaticResource HeaderStyle}" />
                                <TextBlock x:Name="TotalMatchedCountText"
                                           Margin="12,0,0,0" />
                            </StackPanel>

                            <StackPanel Style="{StaticResource HeaderContentPair}">
                                <TextBlock Text="Last Matched"
                                           Style="{StaticResource HeaderStyle}" />
                                <TextBlock x:Name="LastMatchedText"
                                           Margin="12,0,0,0" />
                            </StackPanel>

                            <StackPanel Style="{StaticResource HeaderContentPair}">
                                <TextBlock Text="Auto Disabled"
                                           Style="{StaticResource HeaderStyle}" />

                                <StackPanel Margin="12,0,0,0">
                                    <CheckBox IsChecked="{Binding IsEnabledAutoDisabled}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Auto disabled after " />
                                                <TextBox IsEnabled="{Binding IsEnabledAutoDisabled}"
                                                         Width="40"
                                                         Text="{Binding AutoDisabledAfterDaysText}"/>
                                                <TextBlock Text=" days" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Maybe auto disabled at " />
                                                <TextBlock Text="{Binding AutoDisabledAt}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </CheckBox>                                    
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Style="{StaticResource HeaderContentPair}">
                                <TextBlock Text="Auto Expired"
                                           Style="{StaticResource HeaderStyle}" />

                                <StackPanel Margin="12,0,0,0">
                                    <CheckBox IsChecked="{Binding IsEnabledAutoExpired}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Auto expired after " />
                                                <TextBox IsEnabled="{Binding IsEnabledAutoExpired}"
                                                         Text="{Binding AutoExpiredAfterDaysText}"
                                                         Width="40" />
                                                <TextBlock Text=" days" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Maybe auto expired at " />
                                                <TextBlock Text="{Binding AutoExpiredAt}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </CheckBox>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Test">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Button Content="Run Test"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,6"
                                Padding="4,2"
                                x:Name="RunTestButton"
                                Click="RunTestButton_Click" />

                        <TextBlock Text="Matched in Undecided:"
                                   Style="{StaticResource HeaderStyle}"
                                   Grid.Row="1" />

                        <ListView Grid.Row="2"
                                  x:Name="MatchedRssItemsListView">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding Title}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <Grid Grid.Row="1"
              HorizontalAlignment="Right"
              Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Content="OK"
                    Margin="0,0,4,6"
                    Padding="4,2"
                    x:Name="OKButton"
                    Click="OKButton_Click" />

            <Button Content="Cancel"
                    Margin="0,0,0,6"
                    Padding="4,2"
                    Grid.Column="1"
                    x:Name="CancelButton"
                    Click="CancelButton_Click" />
        </Grid>

    </Grid>
</Window>
