<Window x:Class="RSSViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSViewer"
        mc:Ignorable="d"
        Title="RSSViewer" 
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Padding"
                            Value="6,3" />
                </Style>
            </Grid.Resources>
            
            <Menu>
                <MenuItem Header="Run">
                    <MenuItem Header="Auto Reject"
                              x:Name="RunAutoRejectMenuItem"
                              Click="RunAutoRejectMenuItem_Click" />

                    <MenuItem Header="Once">
                        <MenuItem Header="SyncSource"
                                  x:Name="RunSyncSourceOnceMenuItem"
                                  Click="RunSyncSourceOnceMenuItem_Click" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Settings"
                          x:Name="SettingsMenuItem"
                          Click="SettingsMenuItem_Click"/>
            </Menu>
        </Grid>

        <Grid Margin="4"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox"
                     Padding="2"
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Grid Grid.Row="1"
                  Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid x:Name="SortByArea"
                      Width="80"
                      Margin="0,0,4,0">
                    <ComboBox SelectedItem="{Binding SortByView.SortBy, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding SortByView.SortByOptions}">
                    </ComboBox>
                </Grid>
                
                <Grid x:Name="IncludeRangeArea"
                      Grid.Column="1"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Content="Undecided"
                              IsChecked="{Binding IncludeView.Undecided, Mode=TwoWay}" />

                    <CheckBox Content="Accepted"
                              Grid.Column="1"
                              IsChecked="{Binding IncludeView.Accepted, Mode=TwoWay}" />

                    <CheckBox Content="Injected"
                              Grid.Column="2"
                              IsChecked="{Binding IncludeView.Rejected, Mode=TwoWay}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="2"
                  Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid>
                    <ListView ItemsSource="{Binding Groups}"
                              SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                              SelectedIndex="0"
                              x:Name="GroupsListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding DisplayName}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Accept"
                                          x:Name="GroupsAcceptMenuItem" Click="GroupsAcceptMenuItem_Click"/>
                                <MenuItem Header="Reject"
                                          x:Name="GroupsRejectMenuItem" Click="GroupsRejectMenuItem_Click" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </Grid>

                <GridSplitter Grid.Column="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Width="4"/>

                <Grid Grid.Column="2"
                      Margin="0,0,0,0"
                      DataContext="{Binding SelectedGroup}">
                    
                    <ListView ItemsSource="{Binding Items}"
                              x:Name="ItemsListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="✅"
                                               Visibility="{Binding AcceptedImageVisibility}" />

                                    <TextBlock Text="❎"
                                               Visibility="{Binding RejectedImageVisibility}" />

                                    <TextBlock Text="{Binding Title}"
                                               Grid.Column="1" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Accept"
                                          x:Name="ItemsAcceptMenuItem"
                                          Click="ItemsAcceptMenuItem_Click" />
                                <MenuItem Header="Reject"
                                          x:Name="ItemsRejectMenuItem"
                                          Click="ItemsRejectMenuItem_Click" />
                                <MenuItem Header="Copy"
                                          x:Name="ItemsCopyMenuItem"
                                          Click="ItemsCopyMenuItem_Click" />
                                <MenuItem Header="Add Auto Reject Rule"
                                          x:Name="AddAutoRejectRuleMenuItem" 
                                          Click="AddAutoRejectRuleMenuItem_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Row="2"
              Margin="4,0,4,4">
            <TextBox IsReadOnly="True"
                     Text="{Binding LoggerMessage.MessageText, Mode=OneWay}"
                     Height="100" />
        </Grid>

        <Grid Grid.Row="3">
            <StatusBar>
                <TextBlock Text="Total:"/>
                <TextBlock Text="{Binding Analytics.TotalCount}" />
                <Separator />
                <TextBlock Text="Accepted:"/>
                <TextBlock Text="{Binding Analytics.AcceptedInView}" />
                <Separator />
                <TextBlock Text="Rejected:"/>
                <TextBlock Text="{Binding Analytics.RejectedInView}" />
                <Separator />
                <TextBlock Text="{Binding StatusText}" />
            </StatusBar>
        </Grid>
    </Grid>
</Window>
